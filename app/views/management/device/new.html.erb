<legend>新規登録</legend>

<%= form_for @device, :url => management_device_index_path, :class => "form-horizontal" do |f| %>
  <div class="control-group">
    <label class="control-label">名前</label>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>

   <div class="control-group">
    <label class="control-label">説明</label>
    <div class="controls">
      <%= f.text_field :description %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "登録", :class => "btn btn-primary" %>
    <%= link_to "キャンセル", management_device_index_path, :class => "btn" %>
  </div>
<% end %>
